#!/bin/sh
# postinst script for wanparty-supervision
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
    echo "Config wanparty-supervision"
    grep -q -F '\-i=eth1' /etc/ntopng.conf || echo '-i=eth1' >> /etc/ntopng.conf
    grep -q -F '\-l=1' /etc/ntopng.conf || echo '-l=1' >> /etc/ntopng.conf
    cp -rfv /usr/share/wanparty/usr/* /usr/
    systemctl restart ntopng
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
